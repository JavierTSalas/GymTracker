<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CalendarView
        android:id="@+id/logCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleText"
        />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="50sp"
        android:text="My Logs" />

    <Button
        android:id="@+id/editLogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logCalendar"
        android:layout_centerHorizontal="true"
        android:text="Edit Log" />

    <TextView
        android:id="@+id/logEntryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editLogButton"
        android:layout_centerHorizontal="false"
        android:scrollbars="vertical"
        android:text="Log Here"
        android:textSize="25sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"/>

</RelativeLayout>